<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



    <RelativeLayout
        android:layout_width="330dp"
        android:id="@+id/viewPager"
        android:layout_height="600dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/mainborder">
        <androidx.cardview.widget.CardView
            android:id="@+id/roundedImageView2"
            android:layout_width="270dp"
            android:layout_height="240dp"
            app:cardCornerRadius="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:elevation="50dp"
            app:cardElevation="30dp">

            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/futureimage"
                android:background="@color/white"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/roundedImageView2"
            android:layout_alignEnd="@+id/roundedImageView2"
            android:layout_marginStart="-10dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="-13dp"
            android:fontFamily="@font/andika_new_basic_bold"
            android:text="Mountain Gravity Energy Storage"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:fontFamily="@font/acme"
            android:textAlignment="center"
android:text=" Mountain Gravity Energy Storage (or MGES) can be used for long-term energy storage.
This approach can be particularly useful in remote, rural and island areas. Gravity and hydropower can make this method a successful storage solution."
            android:textColor="@color/white"
            android:textSize="18dp">


        </TextView>
        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:layout_marginTop="530dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/round">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/acme"
                android:layout_marginStart="30dp"
                android:textColor="#1C0B39">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beyond Earth"
                android:textSize="12dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/acme"
                android:layout_marginStart="20dp"
                android:textColor="@color/white">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image Credits"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/acme"
                android:layout_marginStart="190dp"
                android:textColor="#1C0B39">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum"
                android:textSize="12dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/acme"
                android:layout_marginStart="190dp"
                android:textColor="@color/white">

            </TextView>

        </RelativeLayout>




    </RelativeLayout>




</RelativeLayout>

