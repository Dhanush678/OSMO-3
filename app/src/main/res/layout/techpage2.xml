<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >



    <RelativeLayout
        android:layout_width="330dp"
        android:id="@+id/viewPager"
        android:layout_height="600dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/mainborder">
        <androidx.cardview.widget.CardView
            android:layout_width="270dp"
            android:layout_height="240dp"
            android:id="@+id/imageinsert"
            app:cardCornerRadius="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:elevation="50dp"
            app:cardElevation="30dp">

            <ImageView
                android:id="@+id/roundedImageView"
                android:layout_width="267dp"
                android:layout_height="249dp"
                android:background="@color/white"
                android:scaleType="centerCrop"
                android:src="@drawable/tech" />
        </androidx.cardview.widget.CardView>





        <TextView
            android:id="@+id/textinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="310dp"
            android:fontFamily="@font/acme"
            android:textAlignment="center"
            android:text="Nuclear bombs are very powerful and destructive. Tsar Bomba was the largest one ever made and it produced an explosion that was equivalent to 57 megatons of TNT. That is a lot of power! The atomic bomb is ten times more powerful than all of the munitions used during World War II.Nuclear bombs are very powerful explosives. The Tsar Bomba is the most powerful nuclear bomb ever detonated. But it is not practical to build a nuclear bomb more than 100 times as powerful as the Tsar Bomba."
            android:textColor="@color/white"
            android:textSize="16dp">


        </TextView>
        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:layout_marginTop="530dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/round">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/acme"
                android:layout_marginStart="30dp"
                android:textColor="#1C0B39">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beyond Earth"
                android:textSize="12dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/acme"
                android:layout_marginStart="20dp"
                android:textColor="@color/white">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image Credits"
                android:textSize="12dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/acme"
                android:layout_marginStart="190dp"
                android:textColor="#1C0B39">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem Ipsum"
                android:textSize="12dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/acme"
                android:layout_marginStart="190dp"
                android:textColor="@color/white">

            </TextView>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_below="@+id/imageinsert"
            android:layout_alignStart="@+id/imageinsert"
            android:layout_alignEnd="@+id/imageinsert"
            android:layout_marginStart="87dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="83dp"
            android:layout_marginBottom="303dp"
            android:fontFamily="@font/andika_new_basic_bold"
            android:gravity="center"
            android:text="Tsar Bomba"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17dp"
            android:textStyle="bold">

        </TextView>


    </RelativeLayout>




</RelativeLayout>

